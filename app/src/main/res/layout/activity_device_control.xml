<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cmc7.sensationble.DeviceControlActivity">

    <Button
        android:text="@string/disconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/disconnect"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:drawableStart="@android:drawable/ic_menu_close_clear_cancel" />

    <Button
        android:text="@string/time_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_sync"
        android:layout_above="@+id/disconnect"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:drawableStart="@android:drawable/ic_menu_recent_history" />

    <Button
        android:text="@string/refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:id="@+id/refresh"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_above="@+id/time_sync"
        android:layout_alignParentStart="true"
        android:drawableStart="@android:drawable/ic_menu_rotate" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="88dp"
            app:srcCompat="@mipmap/heartrate"
            android:id="@+id/imageView3"
            android:adjustViewBounds="false"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/debug"
            android:textSize="14sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center" />

        <TextView
            android:text="BPM"
            android:id="@+id/BPM"
            android:textAlignment="center"
            android:layout_width="160dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_height="112dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_width="114dp"
            app:srcCompat="@mipmap/step" />

        <TextView
            android:text="TextView"
            android:id="@+id/heartrate"
            android:textSize="60sp"
            android:textAlignment="textStart"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal|center"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_height="99dp"
            android:layout_width="175dp" />

        <TextView
            android:text="Steps"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/steps"
            android:layout_row="3"
            android:layout_column="0"
            android:textAlignment="center" />

        <TextView
            android:text="TextView"
            android:id="@+id/step"
            android:fontFamily="sans-serif"
            android:textSize="60sp"
            android:gravity="center_vertical|center_horizontal|center"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="175dp"
            android:layout_height="99dp"
            android:textAlignment="textStart" />

    </GridLayout>


</RelativeLayout>
